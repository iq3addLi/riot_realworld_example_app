{
    "version": "2.0.0",
    "command": "sh",
    "args": ["-c"],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "echoCommand" : true,
    "tasks": [
        {
            "label" : "build",
            "args" : ["npm run build"],
            "type" : "shell",
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "isBackground"  : false,
            "problemMatcher": [
                "$tsc",
                "$gulp-tsc"
            ]
        },
        {
            "label" : "test",
            "args" : ["npm run test"],
            "type" : "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground"  : false,
            "problemMatcher": [
                "$tsc",
                "$gulp-tsc"
            ]
        }
    ]
}
