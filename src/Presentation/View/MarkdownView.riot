<script>
import marked from "marked"
export default{
    onMounted(props){
        this.setBody( props.body )
    },
    onUpdated(props){
        this.setBody( props.body )
    },
    setBody( body ){
        this.root.innerHTML = body ? marked( body ) : ""
    }
}
</script>
